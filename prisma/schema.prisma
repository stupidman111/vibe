generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" // 生成 prisma client 到 src/generated/prisma 目录
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id       String   @id @default(uuid())
  name     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  message Message[]
}

enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}

model Message {
  id       String      @id @default(uuid())
  content  String
  role     MessageRole
  type     MessageType
  createAt DateTime    @default(now())
  updateAt DateTime    @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  fragment Fragment?
}

model Fragment {
  id        String  @id @default(uuid())
  messageId String  @unique
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  sandboxUrl String
  title      String
  files      Json

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
